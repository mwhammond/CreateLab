<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h1>Coming up</h1>
      <h1><small>We host events from CEO talks to web, development courses and we also bring together partner events like SVC2I, Ctrl/Alt/Change so that you do't miss out.
      </small>
      </h1>
    </div>
    <div class="col-lg-4 col-lg-offset-2">
      <h3>Sign-up for a weekly update.</h3>
      <%= render "public/join_in" %>
    </div>
  </div>
  <div class="row">
    <% if signed_in? %>
      <% if current_user.admin %>
        <%= link_to("New Event",new_event_path, :class => "btn btn-warning")%>
      <% end %>
    <% else %>
      <%= link_to("Sign-in",new_user_session_path, :class => "btn btn-warning")%>
    <% end %>
  </div>
  
  <hr>
  <div class="row">
    <div class="btn-group" data-toggle="buttons" id="filters">
      <label class="btn btn-primary">
        <input type="radio" name="options" class="filterBtn"  id="all" data-filter="*"> Show all
      </label>
      <label class="btn btn-primary">
        <input type="radio" name="options" class="filterBtn" id="meet" data-filter=".meetup"> Meetup
      </label>
      <label class="btn btn-primary">
        <input type="radio" name="options" class="filterBtn" id="skill" data-filter=".skills"> Skill-up
      </label>
      <label class="btn btn-primary">
        <input type="radio" name="options" class="filterBtn" id="start" data-filter=".startup"> Start-up
      </label>
    </div>  
      
    <div id="container">
      <% @events.each do |event| %>
        <div class="isotopeItem <%=event.event_type%>" >
          <div>
            <img src="<%= event.image.url(:medium)%>">
          </div>
          <div class="eventTitle titlebackground<%=event.event_type%>">
            <div>
              <h3><%= link_to "#{event.title}", event %></h3>
            </div>
            <div>
              <h5><%= event.starts_at %></h5>
            </div>
          </div>
          <div class="eventContent">
            <!--
<div>
              <%= event.location %>
            </div>
            <div>
              <%= event.description[0..140] %>
            </div>
            <div>
              <%= event.partner %>
            </div>
            <div>
              Website URL <%= link_to event.external_url %>
            </div>
            <div>
              Ticket URL <%= link_to event.ticket_url %>
            </div>
            <div>
              <%= event.event_type %>
            </div>
            <div>
              <%= link_to 'Edit', edit_event_path(event) %>
            </div>
            <div>
              <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
-->
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
  var $container = $('#container');
  // initialize isotope
  $container.isotope({
    // options...
    itemSelector : '.isotopeItem',
    /*
masonry: {
