<%= form_for @event do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :starts_at %>
    <%= f.datetime_select :starts_at %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :partner %>
    <%= f.text_field :partner %>
  </p>
  <p>
    <%= f.label :external_url %>
    <%= f.text_field :external_url %>
    note: requires http://
  </p>
  <p>
    <%= f.label :ticket_url %>
    <%= f.text_field :ticket_url %>
    note: requires http://
  </p>
  <p>
    <%= f.label :event_type %>
    <%= select(:event, :event_type, [['Startup', 'startup'], ['Skills', 'skills'], ['Meet-up', 'meetup']]) %>  
  </p>
  <p>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </p>

  <p><%= f.button :submit, :class => 'btn btn-success' %></p>
<% end %>

