<p id="notice"><%= notice %></p>
<div class="showEventPage">

  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <%= image_tag @event.image.url(:height => "200", :width => "1500", :crop => "fill", :effect => "blur:1000"), :class => "", :width => "100%"%>
      <div class="row">
        <div class="col-lg-10">
          <div class="page-header">
            <h1><%= @event.title %><br>
            <small> <%= @event.partner %></small></h1>
          </div>
        </div>
        <div class="col-lg-2">
          <%= link_to 'Back to all events', events_path %>
        </div>
      </div>    
      <div class="row">
        <div class="col-lg-6">
          <h2>Starts at:</h2>
          <%= @event.starts_at.to_s(:pretty) %>
        </div>
        <div class="col-lg-6">
          <h2>Location:</h2>
          <%= @event.location %>
        </div>
      </div>
      <div class="row"> <!-- links -->
        <div class="col-lg-6">
          <span class="glyphicon glyphicon-link"></span> <%=link_to(@event.external_url) %>
          <br>
          <span class="glyphicon glyphicon-qrcode"></span> <%= link_to('Tickets',@event.ticket_url) %>
        </div>
        <div class="col-lg-6">
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-lg-12">
          <h2>Description:</h2>
          <%= @event.description %>
        </div>
      </div>      
      <% if signed_in? %>
        <% if current_user.admin? %>
          <%= link_to 'Edit', edit_event_path(@event) %>
          <%= image_tag @event.image.url %>
          <%= image_tag @event.image.url(:medium) %>
          <%= image_tag @event.image.url(:thumb) %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
